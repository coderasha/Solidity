pragma solidity ^0.8.0;

contract iLoop{
uint[3] public arr;
uint count;

function loop()public{
while(count < arr.length){
arr[count] = count ;
count++
}


}

 

}

--------------------------------------------------------
using "For" Loop
pragma solidity ^0.8.0;

contract iLoop{
uint[3] public arr;
uint count;

function loop() public{
for (count = 0 ; count< arr.length ; count++){
arr[count] = count ;

}
}


}
